@model BookViewModel
@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class=" alert-light text-center" style="font-size:58px">BOOK</h1>

</div>



<div class="container">
    <div class="row d-flex justify-content-center">



        <div class="card col-3 m-3 text-center border border-dark rounded shadow-lg p-3 mb-5 bg-white rounded" style="width: 18rem;">
            <img class="card-img-top" src="/Images/book.jpg">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Book.BookId: @Model.Book.BookName</h3>
                <h4 class="">Author:@Model.Book.About</h4>
                <h4 class="text-danger text-center"> @Model.Book.Price</h4>
                <a href="#" class="btn btn-outline-info">BUY</a>
            </div>
        </div>

    </div>
</div>
