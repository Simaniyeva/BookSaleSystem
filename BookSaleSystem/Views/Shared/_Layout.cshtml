<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="jquery/jquery.js"></script>
    <script type="text/javascript" src='js/bootstrap.min.js'></script>
    <link rel="stylesheet" href="css/bootstrap.css" />
    <script src="/Scripts/jquery-1.9.0.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.js" type="text/javascript"></script>

    <script src="jquery/jquery.js"></script>
    <script type="text/javascript" src='js/bootstrap.min.js'></script>
    <link rel="stylesheet" href="css/bootstrap.css" />
    <script>
        function myFunction() {
            document.getElementById("dropdown-menu").classList.toggle("show");
        }
    </script>
    <title>@ViewBag.Title</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/Home/Index">The Best Sellers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/GetAll">All Books</a>
                </li>
                <li class="nav-item ">
                    <a class=" nav-link " href="/Genre/AllGenres" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false" onclick="myFunction()">
                        Genres
                    </a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/AdminOperations">Admin Operations</a>
                </li>
                <li class="nav-item">    <a href="/Home/AddBook" class="btn btn-outline-info m-auto">Add Book</a></li>
            </ul>
</div>
        <form class="form-inline my-2 my-lg-0" method="get" action="/Home/GetById">
            <input class="form-control mr-sm-2" type="text" placeholder="Get By ID" name="id">
            <button class="btn btn-outline-success my-2 my-sm-0 mr-5" type="submit">Search</button>
        </form>
        <form class="form-inline my-2 my-lg-0" method="get" action="/Home/GetByName">
            <input class="form-control mr-sm-2" type="text" placeholder="Get By Name" aria-label="Search" name="NAME">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>

    </nav>


    <div>
        @RenderBody()
    </div>

</body>
</html>
